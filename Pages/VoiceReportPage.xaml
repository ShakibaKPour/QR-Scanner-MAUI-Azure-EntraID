<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RepRepair.ViewModels"
             x:DataType="viewmodels:VoiceReportViewModel"
             x:Class="RepRepair.VoiceReportPage"
             Title="VoiceReportPage">
    <VerticalStackLayout>
        <Label 
            Text="Record a voice message!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Press the mic to record"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
        <Button Text="Record" Command="{Binding RecordCommand}"></Button>
        <Entry Text="Transcription"></Entry> 
        <Button Text="Review" Command="{Binding ReviewTranscriptionCommand}"></Button>
        <Button Text="Submit" Command="{Binding SubmitCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>