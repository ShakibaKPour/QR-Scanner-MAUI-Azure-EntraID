<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            x:Class="RepRepair.Pages.WriteReportPage"
            xmlns:viewmodels="clr-namespace:RepRepair.ViewModels;assembly=RepRepair"
            xmlns:local="clr-namespace:RepRepair.ViewModels"
            x:DataType="viewmodels:WriteReportViewModel"
             Title="Write to Us!">
    <VerticalStackLayout>
        <Picker ItemsSource="{Binding AvailableLanguages}"
             SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"></Picker>
        <Label Text="Scan Result:" Padding="5, 15, 5, 3"></Label>
        <Label Text="{Binding ObjectInfo.QRCode, StringFormat='ID: {0}'}" Padding="5, 3, 5, 3"></Label>
        <Label Text="{Binding ObjectInfo.Name, StringFormat='Name: {0}'}" Padding="5, 3, 5, 3"></Label>
        <Label Text="{Binding ObjectInfo.Location, StringFormat='Location: {0}'}" Padding="5, 3, 5, 15"></Label>
        <Editor Text="{Binding ReportText, Mode=TwoWay}" Placeholder="Write your report here..." HeightRequest="200" MaxLength="400"/>
        <Button Text="Submit" Command="{Binding OnSubmit}" />
    </VerticalStackLayout>
</ContentPage>