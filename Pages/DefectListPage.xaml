<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepRepair.Pages.DefectListPage"
             xmlns:viewmodels="clr-namespace:RepRepair.ViewModels"
             x:DataType="viewmodels:DefectListViewModel"
             Title="Choose a Defect">

    <StackLayout Padding="20">
        <ListView ItemsSource="{Binding Defects}" 
                  SelectedItem="{Binding SelectedDefect}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Submit" Command="{Binding SubmitDefectCommand}" />
    </StackLayout>

</ContentPage>